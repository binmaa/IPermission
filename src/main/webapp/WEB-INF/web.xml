<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--spring bean 加载linstener-->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <!--spring beans配置文件所在目录 不加classpath默认去web-info去找 加上之后去resource去找-->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <context-param>
    <param-name/>
    <param-value/>
  </context-param>
  <!--spring mvc配置-->
  <!--spring处理dispatch请求
      url-pattern /与/* 区别：
      / 只能拦截/login 不能拦截login.jsp (DispatcherServlet jsp不需要被命中 请求被拦截就可以了)
      /* 全拦截（encodingFilter过滤器要命中所有的请求 .jsp .css .js）
   -->
  <servlet>
    <servlet-name>spring</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!--encoding-->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!--driud-->
  <servlet>
    <servlet-name>DriudStatServlet</servlet-name>
    <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
    <init-param>
      <param-name>loginUsername</param-name>
      <param-value>driud</param-value>
    </init-param>
    <init-param>
      <param-name>loginPassword</param-name>
      <param-value>1qaz2wsx</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DriudStatServlet</servlet-name>
    <url-pattern>/sys/driud/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>DriudFilter</filter-name>
    <filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
    <init-param>
      <param-name>exclusions</param-name>
      <param-value>*.js,*.css,*.jpg,*.png,*.ioc,*.gif,/sys/driud/*</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>DriudFilter</filter-name>
    <url-pattern>/*</url-pattern>

  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
